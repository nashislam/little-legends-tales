
# Prevent caching for HTML and root path
/
  Cache-Control: no-store, no-cache, must-revalidate
  Pragma: no-cache
  Expires: 0

/index.html
  Cache-Control: no-store, no-cache, must-revalidate
  Pragma: no-cache
  Expires: 0

# Allow caching for assets with fingerprinting
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# API endpoints should never be cached
/api/*
  Cache-Control: no-store, no-cache, must-revalidate

# Default for other files - slightly shorter cache
/*
  Cache-Control: public, max-age=3600
